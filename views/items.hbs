<div class="row">
    <div class="col-md-12">
        <h2>Items</h2>
          <hr/>
          <div class="table-responsive">
            <table class="table">
            <thread>
                <tr>
                    <th>Item ID</th>
                    <th>Title</th>
                    <th>Post Date</th>
                    <th>Category</th>
                    <th>Price</th>
                    <th>Published</th>
                </tr>
            </thread>
            <tbody></tbody>
            </table>

            <script type="text/x-handlebars-template"  id="table-template">
                {{#each this}}
                    <tr>
                        <td>{{id}}</td>
                        <td>{{title}}</td>
                        <td>{{postDate}}</td>
                        <td>{{category}}</td>
                        <td>${{price}}</td>
                        <td>{{published}}</td>
                    </tr>
                {{/each}}
            </script>
          </div>

        {{#unless item}}
            <div class="col-md-12 text-center">
                <strong>{{message}}</strong>
            </div>
        {{/unless}}
    </div>
</div>
<div class="row">
  <section class="main col-md-9">
    <item>
      <div class="row">
        <div class="col-4">
          <h2>{{data.item.title}}</h2>
          <img
            src={{data.item.featureImage}}
            alt="feature Image"
            style="width:100%"
          />

        </div>

        <div class="col-8"><br />
          <br />
          <div class="row">
            <div class="col-12">
              {{#safeHTML data.item.body}}{{/safeHTML}}
              <br /><br />
              <strong>Price:</strong>
              ${{data.item.price}}<br />
              <strong>Category:</strong>
              {{data.item.category}}<br />
              <strong>Last Updated:</strong>
              {{data.item.postDate}}
            </div>
          </div>
        </div>
      </div>
    </item>
  </section>

  <aside class="col-md-3">
    <br /><br />
    <h4>Items</h4>

    <ul class="list-group">
      {{#if data.items}}
      {{#each data.item}}
        <a href="/shop/id?category={{data.item.category}}" class="list-group-item">{{title}}</a>
      {{/each}}
      {{else}}
        <div class="col-md-12 text-center">
        <h2>{{data.message}}</h2>
        <p>Please try another Item / Category</p>
        </div>
      {{/if}}
    </ul>

    <h4>Categories</h4>

    <ul class="list-group">
      {{#if data.categories}}
      {{#each data.categories}}
        <a href="shop?category={{id}}" class="list-group-item">{{category}}</a>
      {{/each}}
      {{else}}
        <div class="col-md-12 text-center">
        <h2>{{data.message}}</h2>
        <p>Please try another Item / Category</p>
        </div>
      {{/if}}
    </ul>
  </aside>
</div>